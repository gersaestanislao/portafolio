{
    "name": "gersain-portafolio",
    "version": "1.0.0",
    "description": "Tema de WordPress para portafolio con validaciones de accesibilidad y calidad de c√≥digo.",
    "main": "index.js",
    "scripts": {
      "lint:css": "stylelint 'wp-content/themes/porta/styles/**/*.css' --fix",
      "build:css": "postcss wp-content/themes/porta/styles/base.css -o wp-content/themes/porta/styles/style.min.css",
      "optimize:css": "purgecss --css wp-content/themes/porta/styles/style.min.css --content wp-content/themes/porta/styles/**/*.php --output wp-content/themes/porta/styles/dist/",
      "lint:accessibility": "pa11y-ci",
      "test": "npm run lint:css && npm run lint:accessibility"
    },
    "devDependencies": {
      "autoprefixer": "^10.4.20",
      "cssnano": "^6.0.3",
      "pa11y-ci": "^4.0.1",
      "postcss": "^8.4.31",
      "postcss-cli": "^11.0.0",
      "purgecss": "^6.0.0",
      "stylelint": "^16.25.0",
      "stylelint-config-standard": "^36.0.0"
    }
  }
  